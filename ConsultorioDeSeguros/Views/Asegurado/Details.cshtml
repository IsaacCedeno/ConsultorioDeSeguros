@model ConsultorioDeSeguros.Models.Asegurado

@{
    ViewData["Title"] = "Detalles del Asegurado";
}

<h1>@ViewData["Title"]</h1>

<div>
    
    <hr />
    <h4>Asegurado @Model.Nombre</h4>  
    <dl class="row" style="border: 1px solid black; border-radius: 8px; overflow: hidden; width: 40%;">
        <div class="row" style="display: flex; width: 100%; border-bottom: 1px solid black;">
            <dt class="col-sm-2" style="border-right: 1px solid black; padding: 10px; width: 30%;">Cédula</dt>
            <dd class="col-sm-10" style="padding: 10px; width: 70%;">@Model.Cedula</dd>
        </div>

        <div class="row" style="display: flex; width: 100%; border-bottom: 1px solid black;">
            <dt class="col-sm-2" style="border-right: 1px solid black; padding: 10px; width: 30%;">Nombre</dt>
            <dd class="col-sm-10" style="padding: 10px; width: 70%;">@Model.Nombre</dd>
        </div>

        <div class="row" style="display: flex; width: 100%; border-bottom: 1px solid black;">
            <dt class="col-sm-2" style="border-right: 1px solid black; padding: 10px; width: 30%;">Teléfono</dt>
            <dd class="col-sm-10" style="padding: 10px; width: 70%;">@Model.Telefono</dd>
        </div>

        <div class="row" style="display: flex; width: 100%;">
            <dt class="col-sm-2" style="border-right: 1px solid black; padding: 10px; width: 30%;">Edad</dt>
            <dd class="col-sm-10" style="padding: 10px; width: 70%;">@Model.Edad</dd>
        </div>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
